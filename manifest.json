{
  "manifest_version": 2,

  "name": "Feel the Bern",

  "description": "Pointing you in the right direction for who to vote for.",

  "version": "1.0",
  
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.donaldjtrump.com/*"],
      "js" : ["show.js"]
    }
  ],

  "background": {
    "scripts": ["popup.js"]
  },

  "permissions": [
    "activeTab", 
    "https://ajax.googleapis.com/", 
    "tabs"
  ],

  "homepage_url": "https://github.com/avijeets/feelthebern"
}
